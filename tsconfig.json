{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Or "ESNext" if you're using ES modules
    "moduleResolution": "node", // Explicitly set module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",  // If you need baseUrl
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "paths": {
      "#types/*": ["types/*"],
      "#dto/*": ["dto/*"],
      "#utils/*": ["utils/*"],
      "#constants/*": ["constants/*"],
      "#entities/*": ["entities/*"],
      "#modules/*": ["modules/*"],
      "#middlewares/*": ["middlewares/*"]
    },
    "composite": true // Optional: For monorepos or incremental compilation
  },
  "include": ["src/**/*"], // Correct: Includes all TS files in src
  "exclude": ["dist", "node_modules"] // Correct: Excludes dist and node_modules
}